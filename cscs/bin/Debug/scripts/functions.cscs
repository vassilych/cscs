cache["fib"] = 0;

function fibonacci(n) {
  if (contains(cache["fib"], n)) {
    result = cache["fib"][n];    
    //print("  found in cache fib(", n, ")=[", result, "]");
    return result;
  }
  if (!isInteger(n) || n < 0) {
    exc = "Fibonacci is for nonnegative integers only (n="+ n +")";
    throw (exc);
  }
  if (n <= 1) {
    return n;
  }

  result = fibonacci(n - 2) + fibonacci(n - 1);
  cache["fib"][n] = result;
  return result;
}

function tan(x) {
  return sin(x) / cos(x);
}

function cot(x) {
  return cos(x) / sin(x);
}
