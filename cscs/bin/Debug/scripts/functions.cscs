function max(a, b) {
  if (a >= b) {
    return a;
  }
  return b;
}

function max3(a, b, c) {
  return max(a, max(b, c));
}

function isInteger(candidate) {
  return candidate == round(candidate);
}

function factorial(n) {
  if (!isInteger(n) || n < 0) {
    exc = "Factorial is for nonnegative integers only (n="+ n +")";
    throw (exc);
  }
  if (n <= 1) {
    return 1;
  }

  return n * factorial(n - 1);
}
